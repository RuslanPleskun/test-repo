  "main": "index.js",
  "scripts": {
    "cypress:run": "cypress run --reporter mochawesome",
    "mochawesome:merge": "mochawesome-merge mochareports/*.json > mochareports/report.json",
    "mochawesome:generate": "marge mochareports/report.json -f report -o mochareports",
    "copy:attachments": "cp -r cypress/screenshots mochareports && cp -r cypress/videos mochareports",
    "test": "npm run cypress:run && npm run copy:attachments && npm run mochawesome:merge && npm run mochawesome:generate"
  },
